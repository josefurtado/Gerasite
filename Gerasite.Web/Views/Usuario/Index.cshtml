@model IEnumerable<Gerasite.Dominio.Entidades.TemplateArquivado>


@{
    ViewBag.Title = "Index Templates";
    Layout = "~/Views/Shared/_NavGerasite.cshtml";
}
<link rel="stylesheet" href="~/Content/index.css" />
<link rel="stylesheet" href="~/Content/menu.css" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/dashboard.js"></script>

<div class="container-fluid">
    @{Html.RenderPartial("~/Views/Shared/_PartialMenuLateral.cshtml");}
</div>


<div class="container">
    <div class="row">
        <div class="col-lg-12"><br /><br /><br /></div>
    </div>
</div>
   @if (@TempData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Message"]
    </div>
}
<div class="container-fluid">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <h2 class="text-center">Templetes Feitos</h2>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid" id="Templates">
    @if (Model.Count() == 0)
    {

        <div class="alert alert-danger" role="alert">
            Você ainda não possui templates.
        </div>

    }
    else
    {

        foreach (var item in Model)
        {
            <div class="col-sm-6 col-xs-12 col-md-6 col-lg-4 thumbnail">
                <div class="zoom">
                    <img class="img-responsive" id="img-template" src="@Url.Content(item.Imagem)" alt="Image" />
                    <div class="edit" hidden>
                        <button type="button" class="btn btn-primary" formtarget="" onclick="location.href='@Url.Action("VerDetalhe", "Template", new { id = item.Id })'">Ver Resultado</button>
                    </div>
                </div>
            </div>
        }
    }
</div>

