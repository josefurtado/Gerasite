@model Gerasite.Dominio.Entidades.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link rel="stylesheet" href="~/Content/RegistrarUsuario.css" />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="modal-dialog text-center">
            <div class="col-sm-8 main-section">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="text-center">Entrar</h3>
                    </div>

                    @if (@Session["Message"] != null)
                    {
                        <div style="color:white; background-color:black;">
                            @Session["Message"]
                        </div>
                    }
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md2" })
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md9" })
                        @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <a href="#">Esqueceu sua senha?</a>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Entrar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    }
