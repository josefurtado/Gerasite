@model Gerasite.Application.ViewModels.ManagerViewModels.EditPasswordViewModel

@{
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
    ViewBag.Title = "Editar Senha";
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link rel="stylesheet" src="~/Content/EditarUsuario.css" />

<link rel="stylesheet" href="~/Content/dashboard.css" />
<script src="~/Scripts/dashboard.js" type="text/javascript"></script>

<div class="container">
    @{Html.RenderPartial("~/Views/Usuario/_PartialMenuLateral.cshtml");}
</div>

<section class="container">
    <div class="row form-horizontal">
        <div class="col-md-12">
            <h2>Configurações de Usuário</h2>
        </div>

        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="col-md-2 col-sm-2 hidden-xs">
            </div>

            <div class="col-lg-10 col-md-10 col-sm-10">
                <div class="form-group row ">
                    @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "col-lg-4 col-md-4 col-sm-4 col-xs-4 control-label" })
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
                        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group row ">
                    @Html.LabelFor(model => model.ConfirmaSenha, htmlAttributes: new { @class = "col-lg-4 col-md-4 col-sm-4 col-xs-4 control-label" })
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
                        @Html.EditorFor(model => model.ConfirmaSenha, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.ConfirmaSenha, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-4 col-md-4 col-sm-4 hidden-xs control-label"></label>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        <input class="btn btn-success" type="submit" value="Salvar Alterações" />
                        @Html.ActionLink("Cancelar", "Index", "Usuario", new { @class = "btn	btn-danger" })
                    </div>
                </div>


            </div>
        }
    </div>
</section>