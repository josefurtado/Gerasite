@model Gerasite.Application.ViewModels.AccountViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link rel="stylesheet" href="~/Content/Register.css" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container" id="PainelCadastro">
            <div class="row" id="Cadastro">
                <div class="form-horizontal" id="formulario">
                    <h2 class="text-center">Login</h2>
                    @Html.ValidationSummary(true)
              
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12 col-lg-12">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
               </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12 col-lg-12">
                        @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                    </div>
                 </div>

                    <div class="form-group">
                        @Html.ActionLink("Esqueceu sua senha?", "ForgotPassword")
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Entrar" class="btn btn-success" />
                    </div>
                </div>
        </div></div>
}

